doctype html
html(lang="pl")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Dashboard użytkownika
    link(href="https://fonts.googleapis.com/css2?family=Helvetica:wght@300;400;500&display=swap" rel="stylesheet")
    style.
      body {
        font-family: 'Helvetica', sans-serif;
        background-color: #f0f0f0;
        color: #333;
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
        min-height: 100vh;
      }
      header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        background-color: #0071e3;
        padding: 20px;
        color: white;
      }
      header h1 {
        margin: 0;
        font-size: 1.5rem;
      }
      .header-buttons {
        display: flex;
        gap: 10px;
      }
      .logout-button, .dashboard-button {
        background-color: #fff;
        color: #0071e3;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s;
      }
      .logout-button:hover, .dashboard-button:hover {
        background-color: #f0f0f0;
      }
      .container {
        flex: 1;
        padding: 20px;
        max-width: 800px;
        margin: 0 auto;
      }
      .note {
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        padding: 15px;
        margin: 15px 0;
        text-align: center;
      }
      .note img {
        max-width: 100%;
        height: auto;
        margin-top: 10px;
        border-radius: 5px;
      }
      footer {
        background-color: #0071e3;
        color: white;
        text-align: center;
        padding: 15px;
        font-size: 0.9rem;
      }

  body
    // Header
    header
      h1 Witaj, #{username}!
      .header-buttons
        form(action="/addNote" method="GET")
          button.logout-button Dodaj Notatkę
        form(action="/auth/logOut" method="GET")
          button.logout-button Wyloguj


    // Content
    .container
      h2 Twoje notatki:
      each note in notes
        .note
          p= note.title
          form(action=`/handling/viewNote/${note._id}` method="GET")
            button.logout-button Wyswietl tą notatkę
          form(action=`/handling/deleteNote/${note._id}` method="GET")
            button.logout-button Usuń tą notatkę

    // Footer
    footer
      p &copy; 2024 Aplikacja do Notatek. Wszystkie prawa zastrzeżone.
